@model UserCard
@{ 
    Layout = null;
}

    <div class="card" style="width: 18rem;">
        <img src="https://articles-images.sftcdn.net/wp-content/uploads/sites/3/2016/01/wallpaper-for-facebook-profile-photo.jpg" class="card-img-top" alt="...">
